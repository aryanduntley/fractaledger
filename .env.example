# Bitcoin Wallet Secrets
BTC_WALLET_1_SECRET=your_btc_wallet_1_private_key_here
BTC_WALLET_2_SECRET=your_btc_wallet_2_private_key_here
BTC_WALLET_3_SECRET=your_btc_wallet_3_private_key_here

# Litecoin Wallet Secrets
LTC_WALLET_1_SECRET=your_ltc_wallet_1_private_key_here
LTC_WALLET_2_SECRET=your_ltc_wallet_2_private_key_here
LTC_WALLET_3_SECRET=your_ltc_wallet_3_private_key_here

# Dogecoin Wallet Secrets
DOGE_WALLET_1_SECRET=your_doge_wallet_1_private_key_here
DOGE_WALLET_2_SECRET=your_doge_wallet_2_private_key_here
DOGE_WALLET_3_SECRET=your_doge_wallet_3_private_key_here

# API Keys for Blockchain API Services
BLOCKCYPHER_API_KEY=your_blockcypher_api_key_here
BLOCKCHAIR_API_KEY=your_blockchair_api_key_here

# SPV Server Configuration
BTC_SPV_SERVER=electrum.example.com:50001
BTC_SPV_SERVER_POOL=electrum1.example.com:50001,electrum2.example.com:50001,electrum3.example.com:50001
LTC_SPV_SERVER=ltc.electrum.example.com:50001
LTC_SPV_SERVER_POOL=ltc1.electrum.example.com:50001,ltc2.electrum.example.com:50001
DOGE_SPV_SERVER=doge.electrum.example.com:50001
DOGE_SPV_SERVER_POOL=doge1.electrum.example.com:50001,doge2.electrum.example.com:50001

# Full Node RPC Credentials
BITCOIN_RPC_USERNAME=bitcoinrpc
BITCOIN_RPC_PASSWORD=your_bitcoin_rpc_password_here
LITECOIN_RPC_USERNAME=litecoinrpc
LITECOIN_RPC_PASSWORD=your_litecoin_rpc_password_here
DOGECOIN_RPC_USERNAME=dogecoinrpc
DOGECOIN_RPC_PASSWORD=your_dogecoin_rpc_password_here

# JWT Secret for API Authentication
JWT_SECRET=your_jwt_secret_here_min_32_chars

# Hyperledger Fabric Configuration
# Admin credentials
HYPERLEDGER_ADMIN_USER_ID=admin
HYPERLEDGER_ADMIN_USER_SECRET=adminpw

# Application user credentials
HYPERLEDGER_USER_ID=appUser

# CA configuration
HYPERLEDGER_CA_URL=https://localhost:7054
HYPERLEDGER_CA_NAME=ca.org1.example.com

# MSP ID
HYPERLEDGER_MSP_ID=Org1MSP

# Connection profile path (relative to project root)
HYPERLEDGER_CONNECTION_PROFILE_PATH=./connection-profile.json

# Channel and chaincode
HYPERLEDGER_CHANNEL_NAME=fractaledger-channel
HYPERLEDGER_CHAINCODE_NAME=fractaledger-chaincode

# TLS configuration
HYPERLEDGER_TLS_ENABLED=true
HYPERLEDGER_TLS_CERT_PATH=./crypto-config/peerOrganizations/org1.example.com/peers/peer0.org1.example.com/tls/ca.crt
HYPERLEDGER_ORDERER_TLS_CERT_PATH=./crypto-config/ordererOrganizations/example.com/orderers/orderer.example.com/tls/ca.crt

# Peer and orderer endpoints
HYPERLEDGER_PEER_ENDPOINT=localhost:7051
HYPERLEDGER_PEER_HOSTNAME=peer0.org1.example.com
HYPERLEDGER_ORDERER_ENDPOINT=localhost:7050
HYPERLEDGER_ORDERER_HOSTNAME=orderer.example.com

# Discovery configuration
HYPERLEDGER_DISCOVERY_ENABLED=true
HYPERLEDGER_DISCOVERY_AS_LOCALHOST=true

# Event handling
HYPERLEDGER_COMMIT_TIMEOUT=300
HYPERLEDGER_ENDORSEMENT_TIMEOUT=30
HYPERLEDGER_BLOCK_EVENT_LISTENER_ENABLED=true

# Database Encryption Key (if applicable)
DB_ENCRYPTION_KEY=your_encryption_key_here

# Monitoring and Alerting Configuration
MONITORING_INTERVAL=60000
MONITORING_HEALTH_CHECK_ENABLED=true
MONITORING_HEALTH_CHECK_FAILURE_THRESHOLD=3
MONITORING_HEALTH_CHECK_SUCCESS_THRESHOLD=1

# Email Alerting Configuration
MONITORING_ALERTING_ENABLED=false
MONITORING_EMAIL_ALERTING_ENABLED=false
MONITORING_EMAIL_RECIPIENTS=admin@example.com,support@example.com
MONITORING_EMAIL_SMTP_SERVER=smtp.example.com
MONITORING_EMAIL_SMTP_PORT=587
MONITORING_EMAIL_SMTP_USER=alerts@example.com
SMTP_PASSWORD=your_smtp_password_here

# Slack Alerting Configuration
MONITORING_SLACK_ALERTING_ENABLED=false
MONITORING_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Note: This is an example file. Never commit the actual .env file with real secrets to version control.
# Make a copy of this file named .env and fill in your actual secrets.
# Store your .env file in a secure location and ensure it is included in your .gitignore file.
